<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".picture.GlideActivity">
	
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		
		<Button
				android:id="@+id/btn_glide_show"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/show_picture"/>
		
		<Button
				android:id="@+id/pre_load"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/pre_load"/>
		
		<Button
				android:id="@+id/download"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/download"/>
		
		<Button
				android:id="@+id/target_download"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/target_download"/>
	</LinearLayout>
	
	<TextView
			android:id="@+id/tv_path"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	
	
	<ImageView
			android:id="@+id/iv_picture"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	
	<com.decard.zj.founctiontest.picture.MyLayout
			android:id="@+id/my_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
	
	</com.decard.zj.founctiontest.picture.MyLayout>

</LinearLayout>